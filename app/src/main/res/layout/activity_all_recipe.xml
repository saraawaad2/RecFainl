<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_17"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        android:contentDescription="Back Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@id/back_button"
        android:layout_centerHorizontal="true"/>

    <!-- GridLayout for Cards -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="8dp">

        <!-- Card: Breakfast -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_breakfast"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_columnSpan="2"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_breakfast"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/text_breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"
                    android:layout_below="@id/img_breakfast"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Lunch -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_lunch"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_columnSpan="2"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_lunch"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_11"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/text_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"
                    android:layout_below="@id/img_lunch"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Dinner -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dinner"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_columnSpan="2"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_dinner"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_12"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/text_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"
                    android:layout_below="@id/img_dinner"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Desserts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_Desserts"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_columnSpan="2"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_dessert"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_19"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/text_dessert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"
                    android:layout_below="@id/img_dessert"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    </RelativeLayout>

</ScrollView>
