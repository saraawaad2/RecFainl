<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp" />

        <!-- Like Button -->
        <ImageView
            android:id="@+id/like_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/recipe_title"
            android:src="@drawable/img_13"
            android:contentDescription="Like"
            android:padding="4dp" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strawberry Curd"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toEndOf="@id/recipe_image"
            android:layout_toStartOf="@id/like_button"
            android:layout_marginEnd="8dp"
            android:layout_alignTop="@id/recipe_image" />

        <!-- Ingredients -->
        <TextView
            android:id="@+id/recipe_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients: Strawberries, Butter, Egg, Sugar"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@id/recipe_title"
            android:layout_toEndOf="@id/recipe_image"
            android:layout_toStartOf="@id/like_button"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_alignBottom="@id/recipe_image" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
